<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petcelsius.api.mapper.IndexFloorMapper">
    <!-- SQL语句 -->
<!--    首页的floor获取，索引在前4的-->
    <select id="selectFloorToFour" resultType="com.petcelsius.api.domain.IndexFloor">
        select * from index_floor order by `index` asc limit 4
    </select>





</mapper>